# Railway Production Environment Variables
DEBUG=False
ALLOWED_HOSTS=.railway.app,.up.railway.app
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Database (Railway will provide DATABASE_URL automatically)
# DATABASE_URL=postgresql://user:password@host:port/database

# Email Settings (Configure with your email provider)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Payment Settings (Add your real keys for production)
STRIPE_TEST_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_TEST_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# FPX Settings (if using FPX payments)
FPX_API_KEY=your_fpx_api_key
FPX_SECRET=your_fpx_secret

# Site Settings
SITE_DOMAIN=your-app.up.railway.app
SITE_NAME=Donation System
